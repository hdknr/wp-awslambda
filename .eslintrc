{
  "root": true,
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:vue/recommended",     
    "prettier/vue"
  ],
  "rules": {
    "no-plusplus": "off",
    "func-names": "off",
    "vue/component-name-in-template-casing": [
      "error",
      "PascalCase"
    ]
  }
}